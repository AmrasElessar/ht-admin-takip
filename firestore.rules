rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- YARDIMCI FONKSİYONLAR ---
    function isSignedIn() {
      return request.auth != null;
    }
    function getRole() {
      return request.auth.token.role;
    }
    function isKurucu() {
      return getRole() == 'kurucu';
    }
    function isSuperAdmin() {
      return getRole() == 'superadmin';
    }
    function isAdmin() {
      return isKurucu() || isSuperAdmin();
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isUser() {
      return getRole() == 'kullanici';
    }

    // --- ANA VERİ YÖNETİM KURALLARI ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow create, delete: if isKurucu();
    }
    match /facilities/{docId} {
      allow read: if isSignedIn();
      allow write: if isKurucu();
    }
    match /salesGroups/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isAdmin();
      allow delete: if isKurucu();
    }
    match /teams/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isAdmin();
      allow delete: if isKurucu();
    }
    match /systemSettings/{docId} {
        allow read: if isSignedIn();
        allow write: if isKurucu();
    }

    // --- OPERASYONEL VERİ KURALLARI (DÜZELTİLMİŞ BÖLÜM) ---
    // Her koleksiyon için ayrı match blokları tanımlanmıştır.
    
    match /dailyBuses/{docId} {
      allow read: if isSignedIn();
      allow write: if isUser() || isAdmin();
    }
    match /dailyEntries/{docId} {
      allow read: if isSignedIn();
      allow write: if isUser() || isAdmin();
    }
    match /dailyVouchers/{docId} {
      allow read: if isSignedIn();
      allow write: if isUser() || isAdmin();
    }
    match /facilityGuests/{docId} {
      allow read: if isSignedIn();
      allow write: if isUser() || isAdmin();
    }
    match /invitationRecords/{docId} {
      allow read: if isSignedIn();
      allow write: if isUser() || isAdmin();
    }
    match /lotteryAssignments/{docId} {
      allow read: if isSignedIn();
      allow write: if isUser() || isAdmin();
    }
    match /dailyPresentations/{docId} {
      allow read: if isSignedIn();
      allow write: if isUser() || isAdmin();
    }
    
    // XP Sistemi Kuralları
    match /userXP/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    match /xpTransactions/{transactionId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
  }
}