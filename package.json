{
  "name": "ht-admin-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "// Test Scripts": "===== TESTING =====",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/**/*.{test,spec}.js",
    "test:components": "vitest run src/components/**/*.test.js",
    "test:composables": "vitest run src/composables/**/*.test.js",
    "test:stores": "vitest run src/stores/**/*.test.js",
    "test:utils": "vitest run src/utils/**/*.test.js",
    "test:firebase": "vitest run src/test/firebase/**/*.test.js",
    "test:e2e": "cypress run",
    "test:e2e-dev": "cypress open",
    "// Quality Assurance": "===== QA =====",
    "qa:full": "npm run lint && npm run test:run && npm run build",
    "qa:quick": "npm run lint && npm run test:unit",
    "qa:coverage": "npm run test:coverage && open ./coverage/index.html",
    "// CI/CD Scripts": "===== DEPLOYMENT =====",
    "deploy": "npm run qa:full && firebase deploy --only hosting,functions",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "npm run test:run && firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "// Development Tools": "===== DEV TOOLS =====",
    "prepare": "husky",
    "analyze": "vite build --mode analyze",
    "type-check": "vue-tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "clean": "rm -rf dist coverage node_modules/.vite"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "docx": "^9.5.1",
    "dompurify": "^3.2.6",
    "file-saver": "^2.0.5",
    "firebase": "^12.0.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "html-to-docx": "^1.8.0",
    "html2pdf.js": "^0.10.3",
    "interactjs": "^1.10.27",
    "papaparse": "^5.5.3",
    "pinia": "^3.0.3",
    "uuid": "^11.1.0",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.17",
    "vue-chartjs": "^5.3.2",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.5.1",
    "vue-toastification": "^2.0.0-rc.5",
    "zod": "^4.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "cypress": "^13.15.2",
    "eslint": "^9.29.0",
    "eslint-plugin-vue": "~10.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "jsdom-global": "^3.0.2",
    "prettier": "3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.0.0",
    "vite-plugin-pwa": "^1.0.2",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run qa:quick",
      "pre-push": "npm run test:run"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
